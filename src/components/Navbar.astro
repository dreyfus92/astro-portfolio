---
import { SpotifyNowPlaying } from "./SpotifyNowPlaying.tsx";
import { navItems } from "@utils/navigation";
---

<nav
  role="navigation"
  aria-label="navigation"
  id="top-nav"
  class="flex flex-col md:flex-row md:justify-between gap-4 items-center pt-8 pb-8 sm:pb-16 w-full md:w-[740px] mx-auto border-"
>
  <ul class="flex justify-center items-center gap-4 px-3 py-1">
    {
      navItems.map((navItem) => (
        <a
          href={navItem.route}
          class="relative font-medium text-neon-green before:absolute before:-bottom-1 before:h-0.5 before:w-full before:scale-x-0 before:bg-neon-green before:transition hover:before:scale-x-100"
        >
          <li>{navItem.text}</li>
        </a>
      ))
    }
  </ul>
  <SpotifyNowPlaying transition:persist client:load />
</nav>
