---
import Layout from '@layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
---

<Layout title='Paul Valladares | Contact'>
  <main class='flex flex-col items-center'>
    <h1>Contact</h1>
    <div
      id='form-container'
      class='my-16 rounded-lg bg-blue-green-gradient p-0.5'
    >
      <form
        id='contact-form'
        class='flex w-[320px] flex-col gap-4 rounded-lg bg-zinc-900 p-10 text-white md:w-[750px] [&_input]:block [&_input]:bg-zinc-800 max-sm:[&_input]:w-full [&_select]:block [&_select]:bg-zinc-800 [&_select]:text-white [&_textarea]:block [&_textarea]:bg-zinc-800'
        action='https://getform.io/f/0317a7a6-6baa-4a9e-98c3-7717e70bce41'
        method='POST'
      >
        <label for='name' class='font-semibold'>Name</label>
        <input
          type='text'
          id='name'
          name='name'
          placeholder='Jane Doe'
          class='rounded-sm p-2'
          required
        />
        <label for='email' class='font-semibold'>Email</label>
        <input
          type='email'
          id='email'
          name='email'
          placeholder='jane.doe@example.com'
          class='rounded-sm p-2'
          required
        />
        <label for='subject' class='font-semibold'>Subject</label>
        <select id='subject' name='subject' class='rounded-sm p-2' required>
          <option value='General'>General</option>
          <option value='Freelance Work'>Freelance Work</option>
          <option value='Collaboration'>Collaboration</option>
          <option value='Job Opportunity'>Job Opportunity</option>
          <option value='Other'>Other</option>
        </select>
        <label for='message' class='font-semibold'>Message</label>
        <textarea
          id='message'
          name='message'
          placeholder='Hello, I am Jane Doe...'
          class='h-48 resize-none rounded-sm p-2'
          required></textarea>
        <button
          type='submit'
          class='mt-4 flex w-fit items-center gap-1 self-center rounded-lg bg-gray-400 bg-opacity-10 px-4 py-2 font-semibold text-white backdrop-blur-lg hover:scale-105 hover:transition-transform hover:duration-300'
        >
          <Icon name='ic:baseline-send' class='h-4' />
          Send
        </button>
      </form>
    </div>
  </main>
</Layout>
